@using savnmore
 
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<meta name="keywords" content="Groceries,Shopping list,save."/>
<meta name="description" content="Change the way you shop for groceries."/>
<meta name="author" content="Reboot Inc."/>    
<meta property="og:locale" content="en_US" />
<meta property="og:title" content="Groceries" />
<meta property="og:type" content="article" />
<meta property="og:url" content="http://www.savnmore.com" />
<meta property="og:image" content="http://www.savnmore.com/images/logo.png" />
<meta property="og:site_name" content="savnmore.com" />
<meta property="og:description" content="Change the way you shop for groceries." />
<meta name="viewport" content="width=device-width, maximum-scale=1.0" />
    <title>@ViewBag.Title</title>
    <!-- When changing application names, you can provide a new css style for the new site here 
    @@{ string t = "~/Content/" + HttpContext.Current.Session[Constants.SessionAppNameKey] + ".css";} -->
    <link href="@Url.Content("~/Content/mobile.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
   @* <script   src="@Url.Content("~/Scripts/resolution-test.js")" type="text/javascript"></script>*@
    <link rel="SHORTCUT ICON" href="@Url.Content("~/favicon.ico")"/>
    <link rel="icon" type="image/png" href="@Url.Content("~/images/favicon.png")"/>
</head>
    <body>
        
        
                   <div id="banner">
                   </div>
                   <div id="header">
                       <a href="@Url.Action("Index","Home")"><img src="@Url.Content("~/images/logomobile.png")" alt="SavNMore"/></a> 
                       <ul>
                           <li id="home"> @Html.ActionLink("Home", "Index", "Home")</li>
                           <li id="about">@Html.ActionLink("About", "About", "Home")</li>
                           <li id="mylist">@Html.ActionLink("My List", "Index", "ShoppingList")</li>
                           <li id="contact">@Html.ActionLink("Contact", "Contact", "Home")</li>
                       </ul>
                   </div>
       <div id="container">
                   <section id="main">
                       @RenderBody()
                   </section>
       </div>
                   <footer>
                       <div id="footer">
                           <div id="footerWrap">
                               <div class="footerCol footerA">
                                   <p>
                                       @Constants.ApplicationAuthor 
                                       @Constants.ApplicationDisclaimer  
                                   </p> 
                               </div>
                               <div class="footerCol footerB">
                                   @Html.ActionLink("Privacy Policy", "PrivacyPolicy", "Home")
                                   <br/>
                                   @Html.ActionLink("Contact Us", "Contact", "Home")
                                   <br />
                                    @Html.ActionLink("Mobile Version", "Mobile", "Home")
                                    <br />
                                     @Html.ActionLink("Desktop Version", "Desktop", "Home")
                               </div>
                           </div>
                       </div>
                   </footer>
               
    </body>
</html>
