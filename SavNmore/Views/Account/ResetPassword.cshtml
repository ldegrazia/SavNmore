@using System.Configuration
@model savnmore.Models.PasswordResetModel

@{
    ViewBag.Title = "Create A New Password";
}

<h2>Create A New Password</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/password_strength_plugin.js")" type="text/javascript"></script>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Create A New Password</legend>

         
            @Html.HiddenFor(model => model.UserId)
            @Html.HiddenFor(model => model.UserName, new{@name="user_name", @id="user_id"})
         
            @Html.HiddenFor(model => model.RequestId)
         

        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.Password, new { @name = "password", @class = "password_test" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ConfirmPassword)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.ConfirmPassword)
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>

        <p>
            <input type="submit" value="Create New Password" />
        </p>
    </fieldset>
}
 @if(ConfigurationManager.AppSettings["UsePasswordStrength"].ToLower() == "true")
{
<script type="text/javascript">
    $(document).ready(function () {

        //BASIC
        $(".password_test").passStrength({
            userid: "#user_id"
        });


    });
		</script>
        }
